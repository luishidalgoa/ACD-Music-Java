<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dev.iesfranciscodelosrios.acdmusic.Pages.AlbumView.AlbumViewController">
   <children>
      <ImageView fx:id="album_image" fitHeight="98.0" fitWidth="98.0" layoutX="28.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true" />
       <Text fx:id="album_name" fontSmoothingType="LCD" layoutX="151.0" layoutY="36.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Album">
           <font>
               <Font name="Arial Black" size="20.0" />
           </font>
       </Text>
      <Text fx:id="date" fontSmoothingType="LCD" layoutX="151.0" layoutY="104.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Date_relased">
         <font>
            <Font name="Arial" size="18.0" />
         </font>
      </Text>
      <Text fx:id="reproduction" fontSmoothingType="LCD" layoutX="310.0" layoutY="104.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Reproduccion">
         <font>
            <Font name="Arial" size="18.0" />
         </font>
      </Text>
       <ScrollPane layoutX="12.0" layoutY="112.0" prefHeight="274.0" prefWidth="575.0">
           <content>
               <VBox fx:id="songCardsContainer" spacing="10.0" />
           </content>
       </ScrollPane>
      <Button fx:id="add_song" layoutX="523.0" layoutY="85.0" mnemonicParsing="false" onMouseClicked="#addSong" text="Button" />
   </children>
